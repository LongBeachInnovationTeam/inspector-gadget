- inspection ||= @inspection

.callout
  %p
    %b Permit number:
    = inspection.permit_number
  %p
    %b Contact name:
    = inspection.contact_name
  %p
    %b Contact phone:
    = inspection.contact_phone.phony_formatted(normalize: :US)
  %p
    %b Inspection type:
    = inspection.inspection_type.to_s
  %p
    %b Inspection notes:
    = inspection.inspection_notes
  %p
    %b Requested for:
    = inspection.requested_for_date.strftime('%A, %b %d')
    %i= inspection.requested_for_time
  %p
    %b Address:
    = inspection.address
  %p
    %b Address Notes:
    = inspection.address_notes
