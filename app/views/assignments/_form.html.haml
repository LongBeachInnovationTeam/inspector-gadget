= form_for @assignment do |f|
  - if @assignment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assignment.errors.count, "error")} prohibited this assignment from being saved:"
      %ul
        - @assignment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :inspector_id
    = f.select(:inspector_id, options_for_select(User.inspectors.pluck(:name, :id)))
  .field
    = f.label :inspection_id
    = f.number_field :inspection_id
  .field
    = f.label :scheduled_for
    = f.datetime_select :scheduled_for
  .actions
    = f.submit 'Save'
